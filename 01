#include <stdio.h>
int main(){
    int number ;
    int number2;

    printf("entter a 2 numbers");

    scanf("%d",&number);
    scanf("%d",&number2);

    if(number<=10&&number2<=10){
        printf("the number1 and 2 is smaller than 10 \n");
        printf("number 1 is %d and 2 is %d\n",number,number2);}


    else if(number<=100&&number2<=100){
        printf("numbers are smaller than 100\n");
        printf("number 1 is %d and 2 is %d\n",number,number2);}

    else
        printf("numbers are so vag");

    int sum = number2+number;
    printf("sum = %d\n",sum);
    for(int i=1 ; i<=10;i++)
        printf("%d\n",i);

    int choice = 4;
    switch(choice){
        case 0:
            break;
        case 3:
            printf("good choice");
            break;
        default:
            printf("hello mfk");
    }
    return 0;
}
