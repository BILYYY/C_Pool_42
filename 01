#include <stdio.h>

int main() {
    int num = 8 ; //
    int num2 = 2;
    int num3=10;
    // num = num + 3; | local varieble is in stack???
    num -=3;
    num2 +=2;
    num3 /=num2;
    printf("Hello, World!\nthe value of num is : %i\n",num);
    printf("the value of num2 is : %d\n",num2);
    printf("the sum of num + num2 is :%d\n",num+num2);
    printf("num is : %d and num2 is : %d \n",num,num2);
    printf("num3 is : %d\n",num3);

    int value = 0;
    printf("please enter a value : ");
    scanf("%d",&value);
    printf("You enter :%d\n",value);

    float fnumber = 0;
    printf("please enter a float value : \n");
    scanf("%f",&fnumber);
    printf("You enter :%.2lf",fnumber);
    // %g also work need to check why we need to use it in assignment
    return 0;
}
